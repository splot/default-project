{
    "name": "splot/default-project",
    "description": "Default application project skeleton for Splot Framework.",
    "keywords": ["splot", "application", "skeleton"],
    "license": "MIT",
    "authors": [
        {
            "name": "Michał Pałys-Dudek",
            "email": "michal@michaldudek.pl"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "splot/framework": ">=0.9,<2.0",
        "splot/framework-extra-module": ">=0.9,<2.0",
        "splot/assets-module": ">=0.9,<2.0",
        "splot/twig-module": ">=0.9,<2.0",
        "splot/knit-module": ">=0.9,<2.0",
        "splot/devtools-module": ">=0.9,<2.0",
        "splot/weblog-module": ">=0.9,<2.0"
    },
    "minimum-stability": "dev",
    "autoload": {
        "psr-0": { 
            "": "src/" 
        }
    },
    "scripts": {
        "post-install-cmd": [
            "Splot\\AssetsModule\\Composer\\ScriptHandler::installAssets",
            "Splot\\DevToolsModule\\Composer\\ScriptHandler::clearCache"
        ],
        "post-update-cmd": [
            "Splot\\AssetsModule\\Composer\\ScriptHandler::installAssets",
            "Splot\\DevToolsModule\\Composer\\ScriptHandler::clearCache"
        ]
    }
}
